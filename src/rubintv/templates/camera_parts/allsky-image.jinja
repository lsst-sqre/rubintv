{% if "stills" in events and events["stills"] %}
  {% set still = events["stills"]|last %}
  {% set img_url = url_for('event_video',
                      location_name=location.name,
                      camera_name=camera.name,
                      channel_name=still.channel_name,
                      filename=still.filename + '.' + still.ext) %}
  <div class="subheader">
    <h3>{{ date }} : Image {{still.seq_num}}</h3>
  </div>
  <a target="_blank" href="{{ img_url }}">
    <img class="resp" src="{{ img_url }}">
  </a>
  <div class="desc">{{still.filename}}</div>
{% endif %}
