{% extends "_camera.jinja" %}
{% set label = camera.night_report_label %}
{% block pagesubtitle %}
   {{ label }}
{% endblock pagesubtitle %}
{% block undertitle %}
   {{ date }}
{% endblock undertitle %}

{% block breadcrumb %}
<a href="{{ url_for('home') }}">Home</a>>
<a href="{{ url_for('location', location_name=location.name) }}">{{ location.title }}</a>>
<a href="{{ url_for('camera', location_name=location.name, camera_name=camera.name) }}">{{ camera.title }}</a>>
<p>{{ label }}</p>
{% endblock breadcrumb  %}

{% block content %}
 <div id="night-report-update">
    {% include "camera_parts/night-report-events.jinja" %}
 </div>
{% endblock content %}

{% block footer_scripts %}
   <script src="{{ url_for('static', path='assets/night_report_historical.js') }}"></script>
{% endblock footer_scripts %}
