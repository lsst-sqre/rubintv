{% extends "_camera.jinja" %}
{% block pagesubtitle %}
Historical Data
{% endblock pagesubtitle %}
{% block undertitle %}
{{ date }}
{% endblock undertitle %}
{% block breadcrumb %}
<a href="{{ url_for('home') }}">Home</a>>
<a href="{{ url_for('location', location_name=location.name) }}">{{ location.title }}</a>>
<a href="{{ url_for('camera', location_name=location.name, camera_name=camera.name) }}">{{ camera.title }}</a>>
<p>Historical</p>
{% endblock breadcrumb  %}

{% block content %}
{% if historical_busy %}
    {% include "camera_parts/historical-busy-message.jinja" %}
{% else %}

  {# <section class="calendar">
    {% include "cameras/calendar.jinja" %}
  </section> #}

  <section id="channel-day-data">
    {# <div class="columns">
      {% include "cameras/night-report-link.jinja" %}
      {% include "cameras/per-day-channels.jinja" %}
    </div> #}
    {% include "camera_parts/data-table-header.jinja" %}
  </section>

{% endif %}

  {% if camera.metadata_headers %}
  <script type="application/json" id="metadata-headers">
    {{ camera.metadata_headers|tojson }}
  </script>
  {% endif %}

{% endblock content %}

{% block footer_scripts %}
  {% if camera.js_entry %}
    {% set filename = "assets/" + camera.js_entry + "_historical.js" %}
    {# <script src="{{ url('static', filename=filename) }}"></script> #}
  {% endif %}
{% endblock footer_scripts %}
