{% extends "cameras/layout.jinja" %}

{% block pagesubtitle %}
  {{ channel }}
{% endblock pagesubtitle %}

{% block undertitle %}
 {{ date }}
{% endblock undertitle %}

{% block content %}

  <div class="event-info">
    <h2><span id="date">{{ date }}</span> : Sequence <span id="seqNum">{{ seq }}</span></h2>
    <nav class="prev-next-nav">

    </nav>
  </div>
  {% if event %}
    <a id="eventLink" href="{{ event.url }}">
    {% set image_class = "resp" %}
    {# {% if channel=="Monitor" %}
      {% set image_class = "resp behind" %}
    {% endif %} #}
      <img id="eventImage" class="{{ image_class }}" src="{{ event.url }}">
    </a>
    {% if channel != "Monitor" %}
      <div id="eventName" class="desc">{{ event.name }}</div>
    {% endif %}
  {% else %}
    <p>Event not found</p>
  {% endif %}

{% endblock content %}
