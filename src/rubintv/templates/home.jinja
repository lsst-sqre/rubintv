{% extends "layout.jinja" %}
{% block content %}
  <section>
    <h2 class="section-title">Locations</h2>
    <nav class="location-menu">
      <ul class="locations flr">
        {% for loc in locations.values() %}
          <li>
            <a
                class="button button-large logo"
                href="{{ url('location', location=loc.slug) }}"
                style="background-image: url({{ url('static', filename='images/' + loc.logo) }})">
              {{ loc.name }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </section>
{% endblock content %}
