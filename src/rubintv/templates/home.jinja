{% extends "layout.jinja" %}
{% block content %}
  <section>
    <h2 class="section-title">Locations</h2>
    <nav class="location-menu">
      <ul class="locations flr">
        {% for loc in locations.values() %}
          <li>
            <a class="button button-large" href="{{ url('location', location=loc.slug) }}">
              {{ loc.name }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </section>
{% endblock content %}
