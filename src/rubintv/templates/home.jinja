{% extends "_layout.jinja" %}
{% block pagetitle %}
RubinTV
{% endblock pagetitle %}
{% block pagesubtitle %}
Locations
{% endblock pagesubtitle %}
{% block headerbuttons %}
  <a href="{{ url_for('admin')}}" class="button admin">
    Admin Page
  </a>
{% endblock headerbuttons %}
{% block content %}
<section class="locations">
  <h2>Locations</h2>
    <nav class="location-menu">
      <ul class="locations flr">
        {% for loc in locations %}
          <li>
            <a
                class="button button-large button-logo"
                href="{{ url_for('location', location_name=loc.name) }}"
                style="background-image: url({{ url_for('static', path='images/logos/' + loc.logo) }})">
              {{ loc.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
</section>
{% endblock content %}
