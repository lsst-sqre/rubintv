<h3 id="the-date" data-date="{{ date }}">Night reports for: <span class="data">{{ date }}</span></h3>
<div id="night-reports">

  <div class="plots-section tabs">
    <div class="tab-titles">
     {% if dashboard_data["text"] or dashboard_data["quantities"] %}
        <div id="tabtitle-text" class="tab-title disabled">
          Text
        </div>
     {% endif %}
      {% for group in plots %}
        <div id="tabtitle-{{ group }}" class="tab-title">
          {{ group }}
        </div>
      {% endfor %}
    </div>

    <div class="plots">

    {% if dashboard_data["text"] or dashboard_data["quantities"] %}
      <div id="tabgroup-text" class="dashboard tab-content disabled">
        {% if dashboard_data["text"] %}
          <ul class="dashboard-text">
          {% set text_list = dashboard_data["text"] %}
          {% for text in text_list %}
            <li>
              {% for line in text %}
                <p>{{ line|safe }}</p>
              {% endfor %}
            </li>
          {% endfor %}
        </ul>
        {% endif %}

        {% if dashboard_data["quantities"] %}
          <ul class="dashboard-quantities">
          {% set q_list = dashboard_data["quantities"] %}
          {% for quantity, measurement in q_list.items() %}
            <li>
              {{ quantity }}: {{ measurement }}
            </li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>
    {% endif %}

      {% for group in plots %}
        <div id="tabgroup-{{ group }}" class="tab-content plots-grid">
          {% for plot in plots[group] %}
            <figure class="plot">
              <a href="{{ plot.url }}">
                <img src="{{ plot.url }}?t={{ plot.timestamp }}">
              </a>
              <figcaption>
                {{ plot.name }}
              </figcaption>
            </figure>
          {% endfor %}
        </div>
      {% endfor %}
    </div>
  </div>

</div>
