{% extends "cameras/layout.jinja" %}
{% set label = camera.night_report_label %}
{% block pagesubtitle %}
   {{ label }}
{% endblock pagesubtitle %}
{% block undertitle %}
   {{ date }}
{% endblock undertitle %}

{% block breadcrumb %}
<a href="{{ url('home') }}">Home</a>>
<a href="{{ url('location', location=location.slug) }}">{{ location.name }}</a>>
<a href="{{ url('camera', location=location.slug, camera=camera.slug) }}">{{ camera.name }}</a>>
<p>{{ label }}</p>
{% endblock breadcrumb  %}

{% block content %}
 <div id="night-report-update">
    {% include "cameras/night-report-events.jinja" %}
 </div>
{% endblock content %}

{% block footer_scripts %}
   <script src="{{ url('static', filename='assets/night_report_historical.js') }}"></script>
{% endblock footer_scripts %}
