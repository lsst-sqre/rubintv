{% for year in years %}
  {% if year == year_to_display %}
  <div class="year open" data-year="{{ year }}">
  {% else %}
  <div class="year closed" data-year="{{ year }}">
  {% endif %}
    <h4 class="year-title">{{ year }}</h4>
      <div class="months">
        {% for month in years[year] %}
        <div class="month">
          <h5 class="month-title">
            {{ month_names[month - 1] }}
          </h5>
          <div class="days">
            {% for day in years[year][month] %}
              {% set date_str = get_date(year, month, day)|string %}
              <a
                class="day"
                href="{{ url('hist_single', location=location.slug, camera=camera.slug, date_str=date_str) }}">
                <span class="day_num">{{ day }}</span>
                <span class="num_evs">({{ years[year][month][day] }})</span>
              </a>
            {% endfor %}
          </div>  {# end of days #}
        </div> {# end of month #}
      {% endfor %}
      </div>
  </div> {# end of year #}
{% endfor %}
