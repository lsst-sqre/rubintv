{% extends "cameras/layout.jinja" %}
{% block pagesubtitle %}
Historical Movie
{% endblock pagesubtitle %}
{% block undertitle %}
  {{ movie.obs_date }}
{% endblock undertitle %}

{% block breadcrumb %}
<a href="{{ url('home') }}">Home</a>>
<a href="{{ url('location', location=location.slug) }}">{{ location.name }}</a>>
<a href="{{ url('camera', location=location.slug, camera=camera.slug) }}">{{ camera.name }}</a>>
<p>Historical</p>
{% endblock breadcrumb  %}

{% block content %}
<div class="columns">
  <section class="calendar half-width">
    {% include "cameras/calendar.jinja" %}
  </section>
  <section class="current-movie historical">
    {% include "cameras/allsky-movie.jinja" %}
  </section>
</div>
{% endblock content %}
{% block footer_scripts %}
  <script src="{{ url('static', filename='assets/allsky_historical.js') }}"></script>
{% endblock footer_scripts %}
