{% extends "cameras/layout.jinja" %}
{% block undertitle %}
<h2>Historical Data: {{ movie.obs_date }}</h2>
{% endblock undertitle %}
{% block content %}
<div class="columns">
  <section class="calendar half-width">

      {% for year in years %}
        {% if year == year_to_display %}
        <div class="year open" data-year="{{ year }}">
        {% else %}
        <div class="year closed" data-year="{{ year }}">
        {% endif %}
          <h4 class="year-title">{{ year }}</h4>
            <div class="months">
              {% for month in years[year] %}
              <div class="month">
                <h5 class="month-title">
                  {{ month_names[month - 1] }}
                </h5>
                <div class="days">
                  {% for day in years[year][month] %}
                    <a
                      class="day"
                      href="/rubintv/allsky/historical/{{ year }}-{{ month }}-{{ day }}">
                      {{ day }}
                    </a>
                  {% endfor %}
                </div>  {# end of days #}
              </div> {# end of month #}
            {% endfor %}
            </div>
        </div> {# end of year #}
      {% endfor %}

  </section>
  <section class="current-movie historical">
    {% include "cameras/allsky-monitor.jinja" %}
  </section>
</div>
{% endblock content %}
{% block footer_scripts %}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type=module src="{{ url('static', filename='js/allsky-calendar.js') }}"></script>
{% endblock footer_scripts %}
