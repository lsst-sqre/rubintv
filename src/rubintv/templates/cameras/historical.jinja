{% extends "cameras/layout.jinja" %}
{% block pagesubtitle %}
Historical Data
{% endblock pagesubtitle %}
{% block undertitle %}
{{ date }}
{% endblock undertitle %}
{% block breadcrumb %}
<a href="{{ url('home') }}">Home</a>>
<a href="{{ url('location', location=location.slug) }}">{{ location.name }}</a>>
<a href="{{ url('camera', location=location.slug, camera=camera.slug) }}">{{ camera.name }}</a>>
<p>Historical</p>
{% endblock breadcrumb  %}

{% block content %}
<section class="calendar">
  {% include "cameras/calendar.jinja" %}
</section>

<section id="channel-day-data">
  <div class="columns">
    {% include "cameras/night-report-link.jinja" %}
    {% include "cameras/per-day-channels.jinja" %}
  </div>
  {% include "cameras/data-table-header.jinja" %}
</section>

{% if camera.metadata_headers %}
<script type="application/json" id="metadata-headers">
  {{ camera.metadata_headers|tojson }}
</script>
{% endif %}
{% endblock content %}

{% block footer_scripts %}
  {% if camera.js_entry %}
    {% set filename = "assets/" + camera.js_entry + "_historical.js" %}
    <script src="{{ url('static', filename=filename) }}"></script>
  {% endif %}
{% endblock footer_scripts %}
