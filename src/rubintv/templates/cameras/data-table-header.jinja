<div id="table-top"></div>
<div class="channel-grid-heading">
  <h3 class="the-date" data-date="{{ date }}">Data for day: <span class="data">{{ date }}</span></h3>
  <div id="table-controls"></div>
</div>
<div class="table-spacer">
  <div class="jump-buttons">
  </div>
</div>
  <table class="channel-grid">
    <thead>
        <tr>
        <th class="grid-title sideways">Seq. No.</th>
        {% for channel in camera.channels.values() %}
          {% if channel.label %}
            <th class="grid-title gt-channel sideways">{{ channel['label'] }}</th>
          {% endif %}
        {% endfor %}

        {% if camera.has_image_viewer %}
          <th class="grid-title sideways">CCS Image Viewer</th>
        {% endif %}

      </tr>
    </thead>
    <tbody>
      {% include "cameras/data-table.jinja" %}
    </tbody>
  </table>
  <script type="application/json" id="table-metadata">
    {{ metadata|tojson }}
  </script>
