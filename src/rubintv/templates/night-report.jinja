{% extends "_camera.jinja" %}
{% set label = camera.night_report_label %}
{% block pagesubtitle %}
   {{ label }}
{% endblock pagesubtitle %}
{% block undertitle %}
   {{ date }}
{% endblock undertitle %}

{% block breadcrumb %}
<a href="{{ url_for('home') }}">Home</a>>
<a href="{{ url_for('location', location_name=location.name) }}">{{ location.title }}</a>>
<a href="{{ url_for('camera', location_name=location.name, camera_name=camera.name) }}">{{ camera.title }}</a>>
<p>{{ label }}</p>
{% endblock breadcrumb  %}

{% block content %}
 <div id="night-report">
    {% include "camera_parts/night-report-events.jinja" %}
 </div>
{% endblock content %}

{% block further %}
 {% if night_report %}
  {% set home_url = url_for('home') %}
    <script>window.APP_DATA.nightReport = {{ night_report|tojson }}</script>
    {# <script>window.APP_DATA.date = "{{ date }}"</script> #}
    <script>window.APP_DATA.camera = {{ camera|tojson }}</script>
    <script>window.APP_DATA.baseUrl = "{{ home_url }}"</script>
 {% endif %}
{% endblock further %}

{% block footer_scripts %}
   <script src="{{ url_for('static', path='assets/night_report.js') }}"></script>
{% endblock footer_scripts %}
