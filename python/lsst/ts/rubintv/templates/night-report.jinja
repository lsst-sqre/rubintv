{% extends "_camera.jinja" %}
{% set label = camera.night_report_label %}
{% block pagesubtitle %}
   {{ label }}
{% endblock pagesubtitle %}
{% block undertitle %}
   {{ date }}
{% endblock undertitle %}

{% block breadcrumb %}
<a href="{{ url_for('home') }}">Home</a>>
<a href="{{ url_for('location', location_name=location.name) }}">{{ location.title }}</a>>
<a href="{{ url_for('camera', location_name=location.name, camera_name=camera.name) }}">{{ camera.title }}</a>>
<p>{{ label }}</p>
{% endblock breadcrumb  %}

{% block content %}
 <div id="night-report"></div>
{% endblock content %}

{% block further %}
 {{ super() }}
 {% if night_report %}
    <script>window.APP_DATA.nightReport = {{ night_report|tojson }}</script>
 {% endif %}
{% endblock further %}

{% block footer_scripts %}
   <script src="{{ url_for('static', path='assets/night_report.js') }}"></script>
{% endblock footer_scripts %}
